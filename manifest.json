{
    "name": "UI Performance Tool",
    "description": "Testing UI Performance",
    "version": "0.1.0",
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "debugger",
        "tabs",
        "activeTab",
        "cookies",
        "file://*/",
        "http://*/",
        "https://*/"
    ],
    // "options_page": "options/options.html",
    // "devtools_page": "devtools/ui-performance.html",
    // "options_page": "devtools/panel.html",
    "background": {
        "persistent": true,
        "scripts": ["settings.js", "extra.js", "background.js"]
    },
    // "content_scripts": [
    //   {
    //     "matches": ["file://*"],
    //     "js": ["content.js"]
    //   }
    // ],
    "browser_action": {
        "default_title": "UI Performance Tool"
    },
    "manifest_version": 2
}